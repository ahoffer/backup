#! /bin/bash
QUICK_OPTS="-DskipStatic -DskipTests -DskipAttachDockerTars"
BLD_OPTS="$QUICK_OPTS -T1C $*"
echo "Using $BLD_OPTS"

# I don't understand why I have to use eval, but if I don't, it doesn't
# pick up the build options.
eval "mvn clean $QUICK_OPTS"
eval "mvn initialize spotless:apply install $BLD_OPTS"